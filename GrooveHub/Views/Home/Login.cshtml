@model GrooveHub.Models.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Iniciar sesión</title>
    <link href="~/Principal1.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Iniciar sesión</h2>
        <form method="post" action="~/Home/Login">
            <input asp-for="Correo" type="email" placeholder="Correo electrónico" required>
            <input asp-for="Contrasena" type="password" placeholder="Contraseña" required>
            <p id="Error">@Html.ValidationSummary(true)</p>
            <input type="submit" value="Iniciar sesión">
        </form>
    </div>
</body>
</html>

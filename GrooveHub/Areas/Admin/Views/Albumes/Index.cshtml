@model GrooveHub.Areas.Admin.Models.AdminAlbumesViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Administrar Álbum</h1>
<a href="~/Admin/Albumes/Agregar"><img src="~/AdminVistas/add.png" /></a>
<div>
    <ul>
        @foreach (var album in Model.Albumes)
        {
            <li>
                <img src="~/albumes/@(album.Id).jpg" alt="@album.NombreAlbum" />
                <section>
                    <label>@album.NombreAlbum</label>
                    <a><img src="~/AdminVistas/editb.png" /></a>
                    <a><img src="~/AdminVistas/deleteb.png" /></a>
                </section>
            </li>
        }
    </ul>
</div>